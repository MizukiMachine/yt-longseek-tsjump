{
  "manifest_version": 3,
  "name": "YouTube Long Seek & Time Jump",
  "version": "1.0.0",
  "description": "Long duration seek and local time jump for YouTube",
  "permissions": [
    "storage",
    "activeTab",
    "commands"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.youtube-nocookie.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.youtube-nocookie.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "seek-backward-60min": {
      "suggested_key": {
        "windows": "Alt+Shift+Q",
        "mac": "Alt+Shift+Q",
        "chromeos": "Alt+Shift+Q",
        "linux": "Alt+Shift+Q"
      },
      "description": "Seek backward 60 minutes"
    },
    "seek-backward-10min": {
      "suggested_key": {
        "windows": "Alt+Shift+A",
        "mac": "Alt+Shift+A",
        "chromeos": "Alt+Shift+A",
        "linux": "Alt+Shift+A"
      },
      "description": "Seek backward 10 minutes"
    },
    "seek-forward-60min": {
      "suggested_key": {
        "windows": "Alt+Shift+W",
        "mac": "Alt+Shift+W",
        "chromeos": "Alt+Shift+W",
        "linux": "Alt+Shift+W"
      },
      "description": "Seek forward 60 minutes"
    },
    "seek-forward-10min": {
      "suggested_key": {
        "windows": "Alt+Shift+S",
        "mac": "Alt+Shift+S",
        "chromeos": "Alt+Shift+S",
        "linux": "Alt+Shift+S"
      },
      "description": "Seek forward 10 minutes"
    }
  }
}